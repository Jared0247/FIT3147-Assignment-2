{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Burned Area in Australia (2015â€“2023)"
  },
  "width": 700,
  "height": 350,
  "config": {
    "view": {"stroke": null},
    "axis": {"labelFontSize": 11, "titleFontSize": 12}
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Jared0247/FIT3147-Assignment-2/main/data/Forestfiredata.csv"
  },
  "layer": [
    {
      "transform": [
        {"filter": "datum.ignition_date !== null && datum.ignition_date !== ''"},
        {"timeUnit": "year", "field": "ignition_date", "as": "year"},
        {"calculate": "year(datum.year)", "as": "yearNum"},
        {"filter": "datum.yearNum >= 2015 && datum.yearNum <= 2023"},
        {
          "aggregate": [
            {"op": "sum", "field": "area_ha", "as": "total_area"}
          ],
          "groupby": ["year"]
        }
      ],
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal",
          "axis": {
            "title": "Year",
            "tickCount": 9,
            "format": "%Y"
          }
        },
        "y": {
          "field": "total_area",
          "type": "quantitative",
          "axis": {
            "title": "Total Burned Area (ha)"
          }
        }
      },
      "layer": [
        {
          "mark": {"type": "area", "color": "#ff7f0e", "opacity": 0.8}
        },
        {
          "mark": {"type": "line", "color": "#cc5b00", "size": 2}
        },
        {
          "mark": {"type": "point", "filled": true, "color": "#cc5b00", "size": 60}
        },
        {
          "mark": {"type": "text", "dy": -8, "fontSize": 11, "color": "black"},
          "encoding": {
            "text": {
              "field": "total_area",
              "type": "quantitative",
              "format": ","
            }
          }
        }
      ]
    }
  ]
}
