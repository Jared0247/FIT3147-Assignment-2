{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Fire Events by State (2015â€“2023)",
  "width": 600,
  "height": 500,
  "projection": {
    "type": "mercator",
    "center": [137, -24.5],
    "scale": 800
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jared0247/FIT3147-Assignment-2/main/data/ne_110m_graticules_30.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#cccccc",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jared0247/FIT3147-Assignment-2/main/data/STE_2016_AUST.topojson",
        "format": {"type": "topojson", "feature": "STE_2016_AUST"}
      },
      "transform": [
        {
          "lookup": "properties.STE_NAME16",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Jared0247/FIT3147-Assignment-2/main/data/fire_counts.csv"
            },
            "key": "state",
            "fields": ["fire_count"]
          },
          "default": 0
        },
        {"calculate": "datum.fire_count", "as": "Number of Fires"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Number of Fires",
          "type": "quantitative",
          "title": "Number of Fires",
          "scale": {"scheme": "orangered"},
          "legend": {
            "title": "Number of Fires",
            "orient": "right",
            "gradientLength": 200,
            "titleFontSize": 13,
            "labelFontSize": 11,
            "offset": 10
          }
        },
        "tooltip": [
          {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
          {"field": "Number of Fires", "type": "quantitative", "title": "Fire Count"}
        ]
      }
    }
  ]
}
