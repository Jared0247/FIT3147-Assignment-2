{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Distribution of Fire Types in Australia (2015â€“2023)", "anchor": "middle", "dy": -10},
  "width": 700,
  "height": 400,

  "data": {
    "url": "https://raw.githubusercontent.com/Jared0247/FIT3147-Assignment-2/main/data/Forestfiredata.csv"
  }, 
  "config": {
  "view": {
    "stroke": null}
  }
  
  "params": [
    {
      "name": "year_select",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "transform": [
    {
      "calculate": "year(toDate(datum.ignition_date))",
      "as": "year"
    },
    {
      "filter": "datum.year == year_select"
    },
    {
      "filter": "datum.year >= 2015 && datum.year <= 2023"
    },
    {
      "aggregate": [{"op": "count", "as": "count"}],
      "groupby": ["fire_type"]
    },
    {
      "joinaggregate": [{"op": "sum", "field": "count", "as": "total"}]
    },
    {
      "calculate": "round((datum.count / datum.total) * 100)",
      "as": "percent"
    }
  ],

  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 50, "stroke": "#fff"},
      "encoding": {
        "theta": {"field": "count", "type": "quantitative"},
        "color": {
          "field": "fire_type",
          "type": "nominal",
          "title": "Fire Type",
          "scale": {"scheme": "set2"}
        },
        "tooltip": [
          {"field": "fire_type", "type": "nominal", "title": "Fire Type"},
          {"field": "count", "type": "quantitative", "title": "Number of Fires"},
          {"field": "percent", "type": "quantitative", "title": "Percent (%)"}
        ]
      }
    },
    {
      "mark": {"type": "text", "radius": 120, "fill": "black"},
      "encoding": {
        "theta": {"field": "count", "type": "quantitative", "stack": true},
        "text": {"field": "fire_type", "type": "nominal"}
      }
    }
  ]
}
